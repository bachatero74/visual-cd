{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
		},
		{
			"label": "Clean",
			"type": "cargo",
			"command": "clean",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
		},
		
		{
			"label": "Build Release",
			"type": "cargo",
			"command": "build",
			"args": ["--release"],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
		},
		{
			"label": "Build Release asm",
			"type": "cargo",
			"command": "rustc",
			"args": ["--release","--lib","--","--emit","asm"],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
		},
		{
			"label": "Test",
			"type": "cargo",
			"command": "test",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
		},
		{
			"label": "Format",
			"type": "cargo",
			"command": "fmt",
			"group": "build",
		},
	]
}